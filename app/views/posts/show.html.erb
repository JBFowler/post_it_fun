<p class='pull-right'>
  [<%= link_to "edit this post", edit_post_path(@post)%>]
</p>

<p>
  <%= render @post.categories %>
</p>
<%= render 'shared/title', title: @post.title %>

<p>
<%= @post.description %>
</p>
<hr/>

<%= render 'shared/errors', obj: @comment %>
<%= form_for [@post, @comment] do |f| %>
  <div class='control-group' >
    <%= f.label :body, "Leave a comment" %>
    <%= f.text_area :body, rows: 4, class: 'span4', placeholder: 'Enter text here' %>
  </div>
  <%= f.submit 'Add Comment', class: 'btn btn-primary' %>
<% end %>

<% @post.comments.each do |comment| %>
  <div class='well'>
    <em><%= comment.body %></em>
    <br/> 
    <span class='quiet'>posted by </span><%= link_to comment.creator.username, user_path(comment.creator) %>
    <small> at <%= comment.created_at %></small>
  </div>
<% end %>
